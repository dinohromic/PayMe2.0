<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.payme20">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PayMe20"
        tools:targetApi="31">
        <activity android:name="com.example.payme20.views.GroupPageView" />
        <activity android:name="com.example.payme20.views.createNewMembersView" />
        <activity android:name="com.example.payme20.views.MemberPageView"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.example.payme20.views.GroupListView"/>
        <activity android:name="com.example.payme20.views.EventCreateView"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="fullSensor" />
        <activity android:name="com.example.payme20.views.MemberView"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.example.payme20.views.EventPageView"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
    </application>

</manifest>